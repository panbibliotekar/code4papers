import pandas as pd
import matplotlib.pyplot as plt
data1 = pd.read_csv('Downloads/year1.txt', sep='\t', skipfooter=1, engine='python')
data2 = pd.read_csv('Downloads/year2.txt', sep='\t', skipfooter=1, engine='python')
data1 = data1.sort_values(by='Publication Years')
data2 = data2.sort_values(by='Final Publication Year')
plt.figure(figsize=(14, 8))
plt.bar(data1['Publication Years'], data1['Record Count'], color='skyblue')
plt.title('Publication Records Over the Years (Dataset 1)')
plt.xlabel('Publication Year')
plt.ylabel('Record Count')
plt.xticks(rotation=45)
plt.grid(axis='y', linestyle='--', alpha=0.7)
plt.tight_layout()
plt.show()
plt.figure(figsize=(14, 8))
plt.bar(data2['Final Publication Year'], data2['Record Count'], color='skyblue')
plt.title('Publication Records Over the Years')
plt.xlabel('Publication Year')
plt.ylabel('Record Count')
plt.xticks(rotation=45)
plt.grid(axis='y', linestyle='--', alpha=0.7)
plt.tight_layout()
plt.show()
